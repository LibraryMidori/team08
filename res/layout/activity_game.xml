<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game" >
    
    <ImageView 
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/leveltext"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="35dp"
        />
    
    <ImageView 
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/scoretext"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="35dp"
        />
    
    <ImageView 
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/timetext"
        android:layout_marginLeft="750dp"
        android:layout_marginTop="35dp"
        />
    
    <ImageView 
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/livestext"
        android:layout_marginLeft="880dp"
        android:layout_marginTop="35dp"
        />
    
    <TextView
        android:id="@+id/levelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="31dp"
        android:text="8"
        android:textSize="33sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="440dp"
        android:layout_marginTop="31dp"
        android:text="1234"
        android:textSize="33sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="830dp"
        android:layout_marginTop="31dp"
        android:textSize="33sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />
    
    <TextView
        android:id="@+id/livesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="970dp"
        android:layout_marginTop="31dp"
        android:text="3"
        android:textSize="33sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <TableLayout
        android:id="@+id/Map"
        android:layout_width="950dp"
        android:layout_height="600dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_span="3"
        android:gravity="bottom"
        android:padding="2dp"
        android:stretchColumns="*" >
    </TableLayout>

</RelativeLayout>